<nav>
    <div id="image-container">
        <a href="/">
            <img src='/cct-logo-white.png' alt="CCT logo" id="cct-logo">
        </a>
    </div>
    <div id="links-container">
        <a href="/about">About</a>
        <a href="/achievements">Achievements</a>
        <a href="/events">Events</a>
    </div>
</nav>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap');

    nav {
        background-color: rgba(13, 15, 20, 0.7);
        backdrop-filter: blur(10px);
        width: 100%;
        height: 4.5rem;
        box-shadow: 0 1px 10px black;
        display: flex;
        align-content: center;
        justify-content: space-between;
        position: fixed;
        top: 0;
        z-index: 1000;
    }

    #image-container {
        margin-left: 4dvw;
        width: 8.5em;
        display: flex;
        align-content: center;
        justify-content: center;
    }

    #links-container {
        margin-right: 3.5dvw;
        display: flex;
        align-content: center;
        justify-content: center;
    }

    #links-container a {
        transition: all 0.1s linear;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1rem;
        width: 6rem;
    }
    #links-container a:hover {
        cursor: pointer;
        font-size: 1.05rem;
        font-weight: 500;
    }

    #links-container a:not(:last-child) {
        margin-right: 6dvw;
    }

    #image-container:hover {
        cursor: pointer;
    }

    #image-container a {
        display: flex;
        align-content: center;
        justify-content: center;
    }

    #image-container img {
        object-fit: contain;
        max-width: 100%;
        max-height: 100%;
        width: auto;
        height: auto;
    }
</style>