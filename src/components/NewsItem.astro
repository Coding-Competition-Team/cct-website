---
interface Props {
    title: string;
    content: string;
}

const {title, content} = Astro.props
---
<div class="news-item">
    <h2>{title}</h2>
    <p>{content}</p>
</div>
<style>
    .news-item {
        background-color: #1e1e1e;
        width: 65%;
        border-radius: 0.2rem;
        text-align: left;
        padding: 2.6rem;
        margin-bottom: 1.5rem;
        line-height: 1.5rem;
        box-shadow: 0 0 1rem #000000;
        transition: all 0.1s linear;
    }

    .news-item:hover {
        box-shadow: 0 0 2rem #000000;
    }

    .news-item h2 {
        margin-bottom: 1rem;
    }
</style>