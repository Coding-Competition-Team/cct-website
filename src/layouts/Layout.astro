---
interface Props {
	title: string;
}

const { title } = Astro.props;
import Nav from '../components/Nav.astro'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<meta
			property="og:description"
			content="We specialise in everything involving code. We pride ourselves in our eagerness to learn, explore, and apply our knowledge in various fields. Some of the things we do include Competitive Programming, Cybersecurity Capture-the-Flag, Drone Programming, Web Development/Software Engineering, and Artificial Intelligence amongst othersâ€¦"
		/>

		<meta name="twitter:card" content="summary_large_image" />
		<meta
			name="twitter:image"
			content='/cct-logo-black.png'
		/>
		<!--<link rel="icon" type="image/svg+xml" href="/cct-logo-black.png" />-->
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Nav></Nav>
		<slot/>
	</body>
</html>
<style is:global>
	:root {
		background-color: #111111;
	}
	* {
		margin: 0;
		padding: 0;
	}
	a {
		font-family: "Inter", sans-serif;
		font-weight: 400;
		color: #fcfcfc;
		text-decoration: none;
	}
	p {
		font-family: "Inter", sans-serif;
		font-weight: 400;
		color: #fcfcfc;
	}

	h1 {
		font-family: "Inter", sans-serif;
		font-weight: 800;
		color: #fcfcfc;
		font-size: 2rem;
	}

	h2 {
		font-family: "Inter", sans-serif;
		font-weight: 700;
		color: #fcfcfc;
		font-size: 1.5rem;
	}
</style>
